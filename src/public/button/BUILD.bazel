package(default_visibility = ["//visibility:public"])

load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_module",
    "ng_test_library",
    "ng_web_test_suite",
    "sass_binary",
)

ng_module(
    name = "button",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [":button/button.component.css"] + glob(["**/*.html"]),
    module_name = "@sbb-esta/angular-public/button",
    deps = [
        "@npm//@angular/common",
        "@npm//@angular/core",
        "//src/core/icon-directive",
        "//src/core/base",
    ],
)

sass_binary(
    name = "button_button_component_scss",
    src = "button/button.component.scss",
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":button",
        "@npm//@angular/platform-browser",
        "//src/icons",
        "@npm//ng-bullet",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_test_sources"],
)

markdown_to_html(
    name = "overview",
    srcs = [":button.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
