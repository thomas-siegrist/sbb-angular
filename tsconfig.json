{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@sbb-esta/angular-public": ["src/public"],
      "@sbb-esta/angular-public/*": ["src/public/*"],
      "@sbb-esta/angular-business": ["src/business"],
      "@sbb-esta/angular-business/*": ["src/business/*"],
      "@sbb-esta/angular-icons": ["src/icons"],
      "@sbb-esta/angular-icons/*": ["src/icons/*"],
      "@sbb-esta/angular-keycloak": ["src/keycloak"],
      "@sbb-esta/angular-keycloak/*": ["src/keycloak/*"],
      "@sbb-esta/angular-core": ["src/core"],
      "@sbb-esta/angular-core/*": ["src/core/*"],
      "@sbb-esta/angular-maps": ["src/maps"],
      "@sbb-esta/angular-maps/*": ["src/maps/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "e2e/**/*.ts",
    "schematics/**/*.ts",
    "test/**/*.ts",
    "tools/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "schematics/*/files/**/*",
    "src/icons/schematics/*/files/**/*"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
